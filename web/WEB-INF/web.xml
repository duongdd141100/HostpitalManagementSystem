<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MedicalRecordViewController</servlet-name>
        <servlet-class>controller.MedicalRecordViewController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportViewController</servlet-name>
        <servlet-class>controller.ReportViewController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AsignmentController</servlet-name>
        <servlet-class>controller.AsignmentController</servlet-class>
    </servlet>
        <servlet>
        <servlet-name>PatientController</servlet-name>
        <servlet-class>controller.PatientController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PatientDetailController</servlet-name>
        <servlet-class>controller.PatientDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoomController</servlet-name>
        <servlet-class>controller.RoomController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRoomController</servlet-name>
        <servlet-class>controller.AddRoomController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MedicalRecordViewController</servlet-name>
        <url-pattern>/medical-records</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportViewController</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AsignmentController</servlet-name>
        <url-pattern>/assignment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientController</servlet-name>
        <url-pattern>/patient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientDetailController</servlet-name>
        <url-pattern>/patient-detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoomController</servlet-name>
        <url-pattern>/room</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRoomController</servlet-name>
        <url-pattern>/add-room</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
